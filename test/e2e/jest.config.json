{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../../src",
    "testEnvironment": "node",
    "testRegex": "e2e/.*\\.spec\\.ts$",
    "transform": {
        "^.+\\.ts$": [
            "ts-jest",
            {
                "tsconfig": "<rootDir>/../tsconfig.json",
                "useESM": false
            }
        ]
    },
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/$1",
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "globalSetup": "<rootDir>/../test/e2e/setup.ts",
    "globalTeardown": "<rootDir>/../test/e2e/teardown.ts"
}
